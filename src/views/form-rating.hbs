{{#>layout title="Form Testimoni" user=user subtitle="Testimonials"}}
 <section>
        <div class="container text-center p-2 py-md-5">
                <h2 class="fw-bold">{{project.projectName}}</h2>
                <figure class="row row-cols-1 row-cols-md-2  mt-5">

                    <img src="{{project.imageUrl}}"
                        alt="" width="70%" height="300" class="  object-fit-cover">

                    <div class="d-flex flex-column gap-2">
                        <div>
                            <p class="text-start fs-5 mb-1">Duration</p>
                            <div class="d-flex align-items-center">
                                <img width="30" height="30"
                                    src="https://img.icons8.com/?size=100&id=59758&format=png&color=000000"
                                    alt="calender">
                                <p>{{formatDate project.startDate}} - {{formatDate project.endDate}}</p>
                            </div>
                            <div class="d-flex align-items-center mt-1">
                                <img width="30" height="30"
                                    src="https://img.icons8.com/?size=100&id=70370&format=png&color=000000" alt="time">
                                <p>{{duration project.startDate
                            project.endDate}}</p>
                            </div>
                            <div class="d-flex align-items-center mt-1">
                                <img width="30" height="30"
                                    src="https://img.icons8.com/?size=100&id=100103&format=png&color=000000" alt="people">
                                <p>{{getObject project "User.name"}} - {{getObject project "User.role"}} {{durationCreated project.createdAt}}</p>
                            </div>
                            <div class="d-flex align-items-center mt-1">
                                <img width="30" height="30"
                                    src="https://img.icons8.com/?size=100&id=59856&format=png&color=000000" alt="postedAt">
                                <p> {{durationCreated project.createdAt}}</p>
                            </div>

                        </div>
                        <div class="pt-md-5">
                            <p class="text-start fs-5 mb-1">Technologies</p>
                            <div class="row row-cols-2 w-100 w-md-65">
                              {{#each project.technologies}}
                            <div class="d-flex align-items-center">
                                <img src="{{getIcon this}}" alt="{{this}}" width="50" />
                                <h5 class="fw-light">{{this}}</h5>
                            </div>
                            {{/each}}
                            </div>
                        </div>
                    </div>
                </figure>
                <article>
                    <p class="text-start">{{project.description}}</p>
                </article>
                <form action="/testimonials/{{project.id}}" method="post" id="formRating">
                   <h2 class="fw-bold">Give rate</h2>
                   <div class="rating d-flex flex-row-reverse">
                    <input type="radio" name="rating" id="star5" value="5" class="d-none" />
                    <label for="star5" class="star">&#9733;</label>

                    <input type="radio" name="rating" id="star4" value="4" class="d-none" />
                    <label for="star4" class="star">&#9733;</label>

                    <input type="radio" name="rating" id="star3" value="3" class="d-none" />
                    <label for="star3" class="star">&#9733;</label>

                    <input type="radio" name="rating" id="star2" value="2" class="d-none" />
                    <label for="star2" class="star">&#9733;</label>

                    <input type="radio" name="rating" id="star1" value="1" class="d-none" />
                    <label for="star1" class="star">&#9733;</label>
                  </div>
                  <div class="d-flex flex-column text-start mb-2">
                  <label for="name">Name</label>
                  <input type="text" name="name" id="name" class="border-0 shadow rounded-1 py-2" required />
                  </div>
                  <div class="d-flex flex-column text-start mb-2">
                  <label for="comment">Komentar</label>
                  <textarea name="comment" id="comment" rows="6" class="border-0 shadow rounded-1 py-2" 
                  required></textarea>
                  </div>
                  <div class="text-end pt-3">
        <button class="btn btn-dark rounded-5 px-5 py-2 fw-bold" id="btnSubmitRate">submit</button>
      </div>
                </form>
            </div>
        </section>
{{/layout}}

<section>
  <div class="container text-center p-2 py-md-5">
    <h2 class="fw-bold">ADD MY PROJECT</h2>
    <form action="/projects" method="post" enctype="multipart/form-data" id="formAddProject">
      <div class="d-flex flex-column text-start mb-2">
        <label for="projectName">Project Name</label>
        <input type="text" name="projectName" id="projectName" class="border-0 shadow rounded-1 py-2" required />
      </div>
      <div class="d-flex flex-row text-start gap-3 mb-2">
        <div class="d-flex flex-column text-start w-100">
          <label for="startDate">Start date</label>
          <input type="date" name="startDate" id="startDate" class="border-0 shadow rounded-1 py-2" required />
        </div>
        <div class="d-flex flex-column text-start w-100">
          <label for="endDate">End date</label>
          <input type="date" name="endDate" id="endDate" class="border-0 shadow rounded-1 py-2" required />
        </div>
      </div>
      <div class="d-flex flex-column text-start mb-2">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="6" class="border-0 shadow rounded-1 py-2" minlength="150"
          required></textarea>
      </div>

      <div class="d-flex flex-column text-start mb-2">
        <label class="label-project">Technologies</label>
        <div class="row row-cols-2">
          <div>
            <input type="checkbox" name="technologies" id="nodeJs" value="Node JS" class="checkbox" />
            <label for="nodeJs">Node Js</label>
          </div>

          <div>
            <input type="checkbox" name="technologies" id="nextJs" value="Next JS" class="checkbox" />
            <label for="nextJs">Next Js</label>
          </div>
          <div>
            <input type="checkbox" name="technologies" id="reactJs" value="React JS" class="checkbox" />
            <label for="reactJs">React Js</label>
          </div>
          <div>
            <input type="checkbox" name="technologies" id="typeScript" value="TypeScript" class="checkbox" />
            <label for="typeScript">TypeScript</label>
          </div>
        </div>
      </div>

      <div class="text-start mb-2 ">
        <label for="imageUrl">Upload Image</label>
        <div class="w-100 d-md-flex align-items-center mt-2">
          <div id="imagePreviewContainer" class="col col-md-3 me-md-4 mb-3 mb-md-0">
            <img class="rounded mw-100 w-100 object-fit-fill shadow" height="240" id="imagePreview"
              src="{{#if imageUrl }} {{else}} https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg {{/if}}"
              alt="Image Preview" />
          </div>
          <div class="bg-white  border-0 shadow rounded-1 m-0 d-flex align-items-center w-100 h-25 ">
            <input type="file" name="imageUrl" id="imageUrl" class="position-absolute z-0 file-upload" accept="image/*"
              onchange="previewImage(event)" required />
            <label for="imageUrl" class="d-flex w-100 justify-content-between pe-4 rounded-1">
              <p class="bg-dark-subtle px-4 py-3 rounded-1 shadow fw-bold text-muted z-2">choose
              </p>
              <i class="fa fa-paperclip my-auto" aria-hidden="true"></i>
            </label>
          </div>
        </div>
      </div>
      <div class="text-end p-3">
        <button class="btn btn-dark rounded-5 px-5 py-2 fw-bold" id="btnAddProject">submit</button>
      </div>
    </form>
  </div>
</section>